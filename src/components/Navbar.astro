          {(currentLang === "en" ? navLinks.en : navLinks.fr)
              .slice(1)
              .map((link) => (
                <a href={link.href} class={isActive(link.href) ? ACTIVE : INACTIVE}>{link.label}</a>
              ))}
          </div>
        </nav>
      </details>
    </div>
  </div>

  