          </svg>
        </a>
        <div class="absolute left-0 mt-1 w-48 bg-g3 rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-150">
          {(navLinks.fr[4].subLinks).map((sub) => (
            <a href={sub.href} class="block px-4 py-2 text-white/80 hover:text-white hover:bg-g1">
              {sub.label}
            </a>
          ))}
        </div>
      </div>
          </>
        )}
      <LanguageToggle/>

      <!-- Mobile Menu -->      
      </nav>
