      { currentLang === "en" ? (
        <div class="p-2 rounded-xl bg-g1 font-bold inline-block text-black border-2 mr-8"><a href="/donate"> ðŸ’š Donate </a> </div>) : (
        <div class="p-2 rounded-xl bg-g1 font-bold inline-block text-black border-2"><a href="/donate"> ðŸ’š Faire un Don </a> </div>)
      }
