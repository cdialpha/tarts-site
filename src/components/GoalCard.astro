---
import { Image } from "astro:assets";
const { number, goalTitle, img, imgAlt, text, btnTxt, btnImg, btnImgAlt, btnHref } = Astro.props
---
<div class="flex flex-col items-center gap-1 md:gap-3 md:flex-col md:text-center bg-g3/20 rounded-xl p-2">
    <div class="flex w-full">
        <div class="ml-1 mt-1 h-8 w-8 text-center text-g1 bg-g3 font-extrabold border-g3 border-2 rounded-2xl">{number}</div>
        <h1 class="font-extrabold md:text-xl text-g3 pt-2 pl-2">{goalTitle}</h1>
    </div>     
    <Image src={img} alt={imgAlt} height={200} width={200} class="h-40 w-40"/>
    <div class="hidden md:inline text-base break-words h-40">{text}</div>
    <!-- BUTTON -->
    <a href="/about" class="flex items-center p-1 w-43 rounded-xl bg-g2 font-bold text-b1 border-2 border-h3 px-2">
        <Image src={btnImg} alt="worm" class="h-6 w-6"/>
        <p class="px-2"> {btnTxt} </p>
    </a>
</div>